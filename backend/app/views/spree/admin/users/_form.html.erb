<div data-hook="admin_user_form_fields" class="row">
  <div class="alpha six columns">
    <%= f.field_container :email do %>
      <%= f.label :email, Spree.t(:email) %>
      <%= f.email_field :email, :class => 'fullwidth' %>
      <%= error_message_on :user, :email %>
    <% end %>

    <div data-hook="admin_user_form_roles" class="field">
      <%= label_tag nil, Spree.t(:roles) %>
      <ul>
        <% @roles.each do |role| %>
          <li>
            <%= check_box_tag 'user[spree_role_ids][]', role.id, @user.spree_roles.include?(role), :id => "user_spree_role_#{role.name}" %>
            <%= label_tag role.name %>
          </li>
        <% end %>
      </ul>
      <%= hidden_field_tag 'user[spree_role_ids][]', '' %>
    </div>

  </div>

  <div class="omega six columns">
    <%= f.field_container :password do %>
      <%= f.label :password, Spree.t(:password) %>
      <%= f.password_field :password, :class => 'fullwidth' %>
      <%= f.error_message_on :password %>
    <% end %>

    <%= f.field_container :password do %>
      <%= f.label :password_confirmation, Spree.t(:confirm_password) %>
      <%= f.password_field :password_confirmation, :class => 'fullwidth' %>
      <%= f.error_message_on :password_confirmation %>
    <% end %>
  </div>

  <div class='alpha six columns'>
    <%= f.field_container :doctor_name do %>
      <%= f.label :doctor_name, Spree.t(:doctor_name) %>
      <%= f.text_field :doctor_name, :class => 'fullwidth' %>
    <% end %>

    <%= f.field_container :clinic_name do %>
      <%= f.label :clinic_name, Spree.t(:clinic_name) %>
      <%= f.text_field :clinic_name, :class => 'fullwidth' %>
    <% end %>
  </div>

  <div class='omega six columns'>
    <%= f.field_container :patient_id do %>
      <%= f.label :patient_id, 'PATIENT ID' %>
      <%= f.text_field :patient_id, :class => 'fullwidth' %>
    <% end %>

    <%= f.field_container :clinic_phone do %>
      <%= f.label :clinic_phone, Spree.t(:clinic_phone) %>
      <%= f.text_field :clinic_phone, :class => 'fullwidth' %>
    <% end %>
  </div>

  <div class='alpha six columns'>
    <%= image_tag @user.photo.url(:mini), style:'margin-top:10px' %>
    <%= f.field_container :photo do %>
      <%= f.label :medical_recommendation, Spree.t(:medical_recommendation) %>
       <%= f.file_field :photo, :class => 'fullwidth' %>
    <% end %>
  </div>

  <div class='omega six columns'>
    <%= f.field_container :driver_license_number do %>
      <%= f.label :driver_license_number, "DRIVER'S LICENSE NUMBER" %>
      <%= f.text_field :driver_license_number, :class => 'fullwidth' %>
    <% end %>

    <%= f.field_container :driver_license_expiration do %>
      <%= f.label :driver_license_expiration_date, "DRIVER'S LICENSE EXPIRATION DATE" %>
      <%= f.date_field :driver_license_expiration, :class => 'fullwidth' %>
    <% end %>
  </div>
</div>
